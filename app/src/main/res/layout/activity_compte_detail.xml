<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".compteDetail">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="50dp"
      app:srcCompat="@drawable/logo4_petit_70">

    </ImageView>


  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
      android:id="@+id/txtIntituleCompte"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:text="Intitule"
      android:textSize="20sp"></TextView>
  </LinearLayout>

  <LinearLayout
    android:id="@+id/llBudget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    >

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="Budget :"
      android:textSize="20sp"></TextView>

    <TextView
      android:id="@+id/txtMontantBudget"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="500"
      android:textSize="20sp">
    </TextView>



    <Button
      android:id="@+id/btnModifierBudget"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="modifier"
      android:background="@drawable/arrondi_btn"
      android:textColor="#ffffff">

    </Button>
  </LinearLayout>

  <LinearLayout
    android:id="@+id/llBudgetModifie"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:visibility="invisible">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="Budget :"
      android:textSize="20sp"></TextView>



    <EditText
      android:id="@+id/etxtMontantBudget"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="20sp"
      android:layout_weight="1">

    </EditText>

    <Button
      android:id="@+id/btnValiderBudget"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="Valider"
      >

    </Button>
  </LinearLayout>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@color/colorBlueSky">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="DÃ©penses :"
      android:textSize="20sp"
      android:paddingLeft="10dp"
      android:textColor="@color/colorBlueFonce">

    </TextView>

    <TextView
      android:id="@+id/txtMontantDepenses"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="500"
      android:gravity="center"
      android:textSize="20sp"
      android:textColor="@color/colorBlueFonce">
    </TextView>

    <Button
      android:id="@+id/btnAjouterDepenses"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="ajouter"
      android:background="@drawable/arrondi_btn"
      android:textColor="#ffffff"
      android:paddingLeft="10dp">

    </Button>
  </LinearLayout>





  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">


    <ListView
      android:id="@+id/lstDepenses"
      android:scrollbars="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"/>
  </LinearLayout>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="Total :"
      android:textSize="20sp"></TextView>

    <TextView
      android:id="@+id/txtMontantTotalDepenses"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="500"
      android:textSize="20sp">
    </TextView>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:textSize="20sp">
    </TextView>


  </LinearLayout>

</LinearLayout>


